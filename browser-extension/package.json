    "@types/chrome": "^0.0.326",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.1",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
