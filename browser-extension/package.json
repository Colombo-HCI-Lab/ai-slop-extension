  "author": "O.I. Mudannayake <oshan.ivantha@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivantha/fact-check-extension/issues"
  },
  "homepage": "https://github.com/ivantha/fact-check-extension#readme",
  "devDependencies": {
    "@eslint/css": "^0.8.1",
