  "description": "Chrome extension for real-time AI slop detection in Facebook posts",
  "main": "dist/background.js",
  "scripts": {
    "start": "webpack --watch --config webpack.dev.js",
    "build": "node scripts/generate-icons.js && webpack --config webpack.prod.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,css}",
    "generate-icons": "node scripts/generate-icons.js",
    "publish": "./publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivantha/fact-check-extension.git"
  },
  "keywords": [
    "chrome-extension",
